alias tf='tail -f'
alias tfd='tf log/development.log'
alias tft='tf log/test.log'

# -G colorizes output, -h is great because it uses "human" size numbers
alias ls="ls -FG"
alias ll="ls -laFhG"

alias c="clear"
alias h='history'

