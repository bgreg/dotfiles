# Git related aliases
alias gpsh='git push origin HEAD'
alias civ="git ci -v"
alias ca="git cia"
alias ci="git ci -m"
alias s="git st"
alias d="git diff"
alias a="git add"
alias ap="git add -p"
alias ds="d --cached"
alias pp="git stash && git pull && git pop"
alias po="git co db/schema.rb && git stash && git pull && git pop"
alias myco="git log --author=me"
alias co="git checkout"
alias clean="git clean -fxd"
alias grf='git diff-tree --no-commit-id --name-only -r $(git rev-list --no-merges -n 1 HEAD)'
alias erf='vim $(git diff --name-only)'
alias gbr='git for-each-ref --sort=-committerdate refs/heads/ | head | cut -d"/" -f3'
alias gl="git log"

# Rails projects
alias r="rails"
alias migrate="RAILS_ENV=development rake db:migrate"
alias production_deploy="../ops_scripts/backup_prod.sh && cap production deploy && cap production unicorn:restart && open http://security-tools.hq.unity3d.com/ && say 'deploy completed'"
alias rebuild="rake db:drop db:create db:migrate && rake db:seed"
alias rspec="spring rspec"
alias rake="spring rake"
alias rubocop="spring rubocop"
alias rubocop="spring rubocop"
alias spec_scan="rspec && rubocop && brakeman --run-all-checks --summary --exit-on-warn --quiet && echo -e \"\n$COL_RED All checks Passed:) $COL_RESET\""
alias last_migration="zr; cat db/migrate/$(ls ~/Workspace/paladin/db/migrate | tail -1)"
alias paladin="cd ~/Workspace/paladin"

