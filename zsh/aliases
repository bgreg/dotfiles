alias tf='tail -f'
alias tfd='tf log/development.log'
alias tft='tf log/test.log'

# Override system vi/vim, the override option in brew isn't working
# Brew doesn't properly override ctags
alias ctags="`brew --prefix`/bin/ctags"

# ls shortcuts - because two characters suck when one will do
alias l="ls"
alias la="ls -la"
alias lah="ls -lah"

# A script to recursively find and replace through folders using Perl
# alias rr="~/.scripts/recursive_replace.sh"

# Git related aliases
alias gpsh='git push origin HEAD'
alias ci="git ci -v"
alias ca="git cia"
alias cim="git ci -m"
alias s="git st"
alias d="git diff"
alias a="git add"
alias dca="d --cached"
alias pp="git stash && git pull && git pop"
alias po="git co db/schema.rb && git stash && git pull && git pop"
alias myco="git log --author=me"
alias co="git checkout"
alias clean="git clean -fxd"
alias grf='git diff-tree --no-commit-id --name-only -r $(git rev-list --no-merges -n 1 HEAD)'
alias erf='vim $(git diff --name-only)'
alias gbr='git for-each-ref --sort=-committerdate refs/heads/ | head | cut -d"/" -f3'
alias gl="git log"

# Rails/Ruby related aliases
alias r="rake"
alias migraete="RAILS_ENV=development rake db:migrate"
alias production_deploy="cap production deploy && cap production unicorn:restart"
alias rebuild="rake db:drop db:create db:migrate && rake db:seed"

# Dotfiles folder aliases
alias dotv="vim ~/.dotfiles"
alias dotf="~/.dotfiles"


alias ze='vim ~/.dotfiles/zshrc'
alias zr='source ~/.dotfiles/zshrc'
alias ve='vim ~/.dotfiles/vimrc'
alias vi='vim'

alias agr='ag --ruby'

alias fixaudio="sudo killall coreaudiod"
